<RelativeLayout

    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent">

    <fragment
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.kahfi.arief.belajarandroidgoogleplacephotosapi.MapsActivity" />

    <Button
        android:id="@+id/placeSearch"
        android:text="Search Nearest Bank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:layout_below="@+id/placeSearch"
        android:id="@+id/myPlaceClick"
        android:text="Go to My Place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:layout_below="@+id/myPlaceClick"
        android:id="@+id/seePhotos"
        android:text="See Photos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>